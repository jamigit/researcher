{
  "version": 1,
  "commands": [
    {
      "name": "Run tests",
      "command": "npm run test -- --run --silent",
      "nonInteractive": true
    },
    {
      "name": "Lint",
      "command": "npm run lint --silent",
      "nonInteractive": true
    },
    {
      "name": "Build",
      "command": "npm run build --silent",
      "nonInteractive": true
    },
    {
      "name": "Type check",
      "command": "tsc --noEmit",
      "nonInteractive": true
    }
  ]
}
